{
  "manifest_version": 2,

  "name": "Scrub",
  "description": "Scrubs the excess content away. Safari style read mode",
  "version": "1.0",

  "permissions": [
	"tabs", "http://*/*", "https://*/*", "file:///*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
	"default_icon": "icon.png"
  },
  "options_page": "options.html"
}
